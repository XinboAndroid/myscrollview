<com.pangff.myscrollview.ContainerScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <com.pangff.myscrollview.TopScrollView
        android:id="@+id/topScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:text="@string/hello_world"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.pangff.myscrollview.TopScrollView>

    <ListView
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</com.pangff.myscrollview.ContainerScrollView>